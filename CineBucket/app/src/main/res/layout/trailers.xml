<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/trailerPadding"
    android:paddingRight="@dimen/trailerPadding"
    android:paddingTop="@dimen/trailerLinearLayoutPadding"
    android:paddingBottom="@dimen/trailerLinearLayoutPadding">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/trailer_icon"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/trailerPadding"
        android:layout_gravity="center"
        android:textSize="@dimen/trailerNameTextSize"
        android:id="@+id/trailer_text"
        android:text="Trailer"/>
</LinearLayout>